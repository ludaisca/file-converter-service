# ==================
# Configuración General
# ==================
ENV=development
DEBUG=false
LOG_LEVEL=INFO

# ==================
# Servidor
# ==================
HOST=0.0.0.0
PORT=5000
WORKERS=4

# ==================
# Rutas de Archivos
# ==================
UPLOAD_FOLDER=/tmp/file-converter/uploads
CONVERTED_FOLDER=/tmp/file-converter/converted
LOGS_FOLDER=/tmp/file-converter/logs
TEMP_FOLDER=/tmp/file-converter/temp

# ==================
# Límites de Archivos
# ==================
# Tamaño máximo en bytes (default: 500MB)
MAX_FILE_SIZE=524288000

# ==================
# Configuración OCR
# ==================
ENABLE_OCR=true
OCR_DEFAULT_LANGUAGE=spa
OCR_MAX_PAGES=50
OCR_TIMEOUT_SECONDS=300

# ==================
# Rate Limiting
# ==================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==================
# Caché (Futuro)
# ==================
ENABLE_CACHE=false
CACHE_TYPE=simple
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_HOURS=24

# ==================
# Seguridad
# ==================
CORS_ORIGINS=*
MAX_UPLOAD_TIMEOUT=600
