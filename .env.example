# File Converter Service - Environment Configuration
# Copy this file to .env and adjust values as needed

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# File Size Limits
MAX_FILE_SIZE=50
MAX_DOWNLOAD_SIZE=100

# Cleanup Configuration
CLEANUP_INTERVAL=3600
FILE_TTL=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# System Monitoring (for health checks)
ENABLE_HEALTH_MONITORING=True

# API Version
API_VERSION=1.0.0

# ====================
# Authentication
# ====================
# Enable API key authentication (true/false)
ENABLE_API_AUTH=false

# API Keys (add multiple with API_KEY_1, API_KEY_2, etc.)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# API_KEY_1=your-secure-api-key-here
# API_KEY_2=another-api-key-here

# Development API key (only used in development mode)
DEV_API_KEY=dev-key-12345

# ====================
# Rate Limiting
# ====================
# Storage for rate limiting (memory:// or redis://localhost:6379)
RATELIMIT_STORAGE_URL=memory://

# Rate limits
CONVERT_RATELIMIT=10 per minute
HEALTH_RATELIMIT=30 per minute

# ====================
# OCR Configuration
# ====================
# Enable OCR functionality
ENABLE_OCR=true

# Default OCR language (spa=Spanish, eng=English)
OCR_DEFAULT_LANGUAGE=spa

# Languages available (separate with +)
OCR_LANGUAGES=spa+eng

# Enable image preprocessing for better accuracy
OCR_PREPROCESS=true

# Maximum pages to process in PDF OCR (0 = unlimited)
OCR_MAX_PAGES=50
